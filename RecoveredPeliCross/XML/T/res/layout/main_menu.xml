<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/container" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:layout_gravity="center" android:id="@id/buttonPlay" android:background="@color/green" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_play" android:layout_weight="1.0" android:onClick="play" />
        <Button android:id="@id/buttonRank" android:background="@color/darkorange" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_rank" android:layout_weight="1.0" android:onClick="showRank" />
        <Button android:id="@id/buttonInstructions" android:background="@color/red" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/button_instructions" android:scrollHorizontally="true" android:layout_weight="1.0" android:onClick="showInstructions" />
        <Button android:id="@id/buttonExitApp" android:background="@color/blue" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/stop" android:scrollHorizontally="true" android:layout_weight="1.0" android:onClick="exitApp" />
    </LinearLayout>
</FrameLayout>